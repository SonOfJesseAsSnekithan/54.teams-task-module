@page
@model Microsoft.BotBuilderSamples.Pages.CustomFormModel
@{
    ViewData["Title"] = "CustomForm";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<html>
<head>
    <style>
        body {
            margin: 0;
            padding-left: 4px;
            padding-right: 4px;
        }
    </style>
    <title>Microsoft Teams Task Module Tester - Custom Form</title>
</head>
<body>
    <script>
        microsoftTeams.initialize();
        function validateForm() {
            var customerInfo = {
                name: document.forms["customerForm"]["name"].value,
                transport: document.forms["customerForm"]["transport"].value,
                age: document.forms["customerForm"]["age"].value
            }
            microsoftTeams.tasks.submitTask(customerInfo, "@Model.MicrosoftAppId");
            return true;
        }
    </script>
    <div class="surface theme-light">
        <div class="panel">
            <div class="font-semibold font-title">Enter user profile:</div>
            <form method="POST" id="customerForm" onSubmit="return validateForm()">
                <div>
                    <div class="form-group form-field-input" style="margin-bottom: 10px; margin-top: 10px;"></div>
                    <label for="name">Name: </label>
                    <input class="form-control input-field" id="name" type="text" placeholder="first and last" name="name" tabindex="1" autofocus>
                    <div class="form-group form-field-input" style="margin-bottom: 10px;"></div>
                    <label for="transport">Mode of Transport (Bus, Train, Air): </label>
                    <input class="form-control input-field" id="transport" type="text" placeholder="Bus or Train or Air" name="transport" tabindex="2">
                    <div class="form-group form-field-input" style="margin-bottom: 10px;"></div>
                    <label for="age">Age: </label>
                    <input class="form-control input-field" id="age" type="number" placeholder="enter age" name="age" tabindex="3">
                    <div class="form-group form-field-input" style="margin-bottom: 10px;"></div>
                    <button class="btn button-primary" type="submit" tabindex="5">Submit</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>